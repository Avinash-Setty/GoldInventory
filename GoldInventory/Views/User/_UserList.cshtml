@model IPagedList<GoldInventory.Models.PUser>

<div id="UserList">
    <div class="pager" data-avi-target="#UserList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
            PagedListRenderOptions.MinimalWithItemCountText)
    </div>
    <div class="hidden-sm hidden-xs">
        <table class="table table-hover table-responsive">
            <tr>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th>
                    Role
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="visible-sm visible-xs">
        @foreach (var user in Model)
        {
            <div>
                <button class="btn btn-default expand-btn-to-max" type="button" data-toggle="collapse" data-target="#@user.Id" aria-expanded="false" aria-controls="collapseExample">
                    @user.UserName »
                </button>
                <div class="collapse" id="@user.Id">
                    <div class="well">
                        <table class="table">
                            <tr>
                                <td>UserName</td>
                                <td>@user.UserName</td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>@user.Email</td>
                            </tr>
                            <tr>
                                <td>Role</td>
                                <td>@user.Role</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
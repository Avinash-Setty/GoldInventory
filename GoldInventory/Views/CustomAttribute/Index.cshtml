@model IEnumerable<GoldInventory.Model.CustomAttribute>

<h2>Custom Attributes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="hidden-sm hidden-xs">
    <table class="table table-hover table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }

    </table>
</div>
<div class="visible-sm visible-xs">
    @foreach (var attr in Model)
    {
        <div>
            <button class="btn btn-default expand-btn-to-max" type="button" data-toggle="collapse" data-target="#@attr.Id" aria-expanded="false" aria-controls="collapseExample">
                @attr.Name »
            </button>
            <div class="collapse" id="@attr.Id">
                <div class="well">
                    <table class="table table-hover table-responsive">
                        <tr>
                            <td>Name</td>
                            <td>@attr.Name</td>
                        </tr>
                        <tr>
                            <td>Type</td>
                            <td>@attr.Type</td>
                        </tr>
                        <tr>
                            <td>CreatedAt</td>
                            <td>@attr.CreatedAt</td>
                        </tr>
                        <tr>
                            <td>UpdatedAt</td>
                            <td>@attr.UpdatedAt</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @Html.ActionLink("Edit", "Edit", new { id = attr.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = attr.Id })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    }
</div>